<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title><%= documentTitle %></title>
    <style>
        @page {
            margin: 1.5cm 2.5cm 1.5cm 2.5cm;
            size: A4 landscape;
        }
        
        body { 
            font-family: 'Times New Roman', serif; 
            margin: 0; 
            padding: 0;
            font-size: 16px;
            line-height: 1.4;
            color: #000;
        }

        /* HEADER */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 40px;
        }
        
        .header-left, .header-right {
            width: 40%;
            font-size: 10px;
            font-weight: bold;
            text-align: center;
        }
        
        .header-center {
            width: 20%;
            text-align: center;
        }
        
        .header-center img {
            max-width: 90px;
        }

        .separator {
            margin: 3px 0;
        }

        .header-section {
            margin-bottom: 2px;
        }

        /* TITRE */
        .fiche-title {
            text-align: center;
            margin-bottom: 20px;
        }

        .document-title {
            font-size: 17px;
            font-weight: bold;
            text-decoration: underline;
            text-transform: uppercase;
        }

        .content {
            margin: 20px 0;
        }

        .info-header {
            margin-bottom: 20px;
        }

        .info-ligne {
            font-size: 16px;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 5px;
        }

        .info-periode {
            font-size: 16px;
            color: #555;
            font-style: italic;
        }

        .presence-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .presence-table th {
            background-color: #2c3e50;
            color: white;
            padding: 10px 5px;
            border: 1px solid #000;
            font-weight: bold;
            text-align: center;
            font-size: 16px;
        }

        .presence-table td {
            padding: 10px 5px;
            border: 1px solid #000;
            font-size: 16px;
        }

        .presence-table td.numero {
            text-align: center;
            font-weight: bold;
            width: 5%;
        }

        .presence-table td.nom {
            text-align: left;
            padding-left: 10px;
            width: 25%;
        }

        .presence-table td.specialite {
            text-align: left;
            padding-left: 10px;
            width: 20%;
        }

        .presence-table td.telephone {
            text-align: center;
            width: 12%;
        }

        .presence-table td.email {
            text-align: left;
            padding-left: 10px;
            width: 18%;
        }

        .presence-table td.signature {
            width: 20%;
            min-height: 40px;
            background-color: #f9f9f9;
        }

        @media print {
            body {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }

        .stats {
            margin-top: 10px;
            font-size: 16px;
            font-weight: bold;
            text-align: right;
            padding-right: 20px;
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <div class="header">
        <div class="header-left">
            REPUBLIQUE DU CAMEROUN<br>
            Paix - Travail - Patrie<br>
            ----------------------<br>
            MINISTERE DES FINANCES<br>
            ----------------------<br>
            DIRECTION GENERALE DES IMPOTS<br>
            ----------------------<br>
            DIRECTION DES AFFAIRES GENERALES<br>
            ----------------------<br>
            CELLULE DU PERFECTIONNEMENT ET DE LA FORMATION CONTINUE
        </div>
        
        <div class="header-center">
            <% if (logoUrl) { %>
                <img src="<%= logoUrl %>" alt="Armoiries">
            <% } %>
        </div>
        
        <div class="header-right">
            REPUBLIC OF CAMEROON<br>
            Peace - Work - Fatherland<br>
            ----------------------<br>
            MINISTRY OF FINANCE<br>
            ----------------------<br>
            DIRECTORATE GENERAL OF TAXATION<br>
            ----------------------<br>
            DEPARTMENT OF GENERAL AFFAIRS<br>
            ----------------------<br>
            TRAINING AND SKILLS PERFECTION UNIT
        </div>
    </div>

    <!-- TITRE -->
    <div class="fiche-title">
        <h3 class="document-title">FICHE DE PRESENCE DES FORMATEURS</h3>
    </div>

    <div class="content">
        <div class="info-header">
            <div class="info-ligne">Formation : <%= themeLibelle %></div>
            <% if (periode) { %>
                <div class="info-periode"><%= periode %></div>
            <% } %>
            <div class="info-ligne">Journée du <%= journee %></div>
        </div>

        <table class="presence-table">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>NOM ET PRÉNOM</th>
                    <th>GRADE</th>
                    <th>FONCTION</th>
                    <th>TÉLÉPHONE</th>
                    <th>EMAIL</th>
                    <th>SIGNATURE</th>
                </tr>
            </thead>
            <tbody>
                <% formateurs.forEach(function(formateur) { %>
                    <tr>
                        <td class="numero"><%= formateur.numero %></td>
                        <td class="nom"><%= formateur.nomComplet %></td>
                        <td class="specialite"><%= formateur.grade %></td>
                        <td class="specialite"><%= formateur.fonction %></td>
                        <td class="telephone"><%= formateur.telephone %></td>
                        <td class="email"><%= formateur.email %></td>
                        <td class="signature"></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="stats">
            Total formateurs : <%= nombreFormateurs %>
        </div>
    </div>
</body>
</html>
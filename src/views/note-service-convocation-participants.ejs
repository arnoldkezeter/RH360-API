<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title><%= documentTitle %></title>
    <style>
        @page {
            margin: 1.5cm 2.5cm 1.5cm 2.5cm;
            size: A4;
        }
        
        body { 
            font-family: 'Times New Roman', serif; 
            margin: 0; 
            padding: 0;
            font-size: 16px;
            line-height: 1.4;
            color: #000;
        }

        /* HEADER */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 40px;
        }
        
        .header-left, .header-right {
            width: 40%;
            font-size: 10px;
            font-weight: bold;
            text-align: center;
        }
        
        .header-center {
            width: 20%;
            text-align: center;
        }
        
        .header-center img {
            max-width: 90px;
        }

        .separator {
            margin: 3px 0;
        }

        .header-section {
            margin-bottom: 2px;
        }

        /* TITRE */
        .note-title {
            text-align: center;
            margin-bottom: 20px;
        }

        .document-title {
            font-size: 17px;
            font-weight: bold;
            margin-bottom: 20px;
            line-height: 1.4;
        }

        .document-title p {
            margin: 5px 0;
        }

        /* CONTENU */
        .body-content {
            text-align: justify;
            line-height: 1.5;
            font-size: 16px;
        }

        .body-content p {
            text-indent: 1.2cm;
            margin-bottom: 12px;
        }

        /* COPIE */
        .copie-section {
            margin-top: 40px;
            page-break-inside: avoid;
            font-size: 16px;
        }

        .copie-title {
            font-weight: bold;
            text-decoration: underline;
            margin-bottom: 10px;
        }

        .copie-list {
            margin-left: 20px;
            line-height: 1.6;
        }

        /* QR CODE sous la section copie */
        .verification-section {
            margin-top: 20px;
            width: 150px;
            text-align: center;
            page-break-inside: avoid;
        }

        .qr-code-container img {
            width: 85px;
            height: 85px;
        }

        .reference-systeme {
            font-size: 10px;
            font-weight: bold;
            margin-top: 5px;
        }

        .verification-text {
            font-size: 8px;
            color: #555;
            margin-top: 3px;
        }

        /* ANNEXE - Tableau des participants */
        .annexe-section {
            page-break-before: always;
            margin: 20px 0;
        }

        .annexe-title {
            text-align: center;
            font-size: 17px;
            font-weight: bold;
            text-decoration: underline;
            margin: 20px 0;
            text-transform: uppercase;
        }

        .participants-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .participants-table th {
            background-color: #2c3e50;
            color: white;
            padding: 10px;
            border: 1px solid #000;
            font-weight: bold;
            text-align: center;
            font-size: 13px;
            vertical-align: middle;
        }

        .participants-table td {
            padding: 8px;
            border: 1px solid #000;
            font-size: 13px;
            vertical-align: top; 
        }
        
        .participants-table td.numero { text-align: center; font-weight: bold; }
        .participants-table td.nom { text-align: left; padding-left: 15px; }
        .participants-table td.fonction,
        .participants-table td.service { text-align: left; padding-left: 10px; }
        
        .participants-table td.lieu-periode { 
            text-align: center;
            line-height: 1.2;
        }
        
        .periode-text {
            display: block;
            font-size: 12px;
            margin-bottom: 3px;
        }
        
        .lieu-text {
            display: block;
            font-weight: bold;
        }

        @media print {
            body {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
            
            .page-break {
                page-break-before: always;
            }
        }

        .highlight {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <div class="header">
        <div class="header-left">
            REPUBLIQUE DU CAMEROUN<br>
            Paix - Travail - Patrie<br>
            ----------------------<br>
            MINISTERE DES FINANCES<br>
            ----------------------<br>
            DIRECTION GENERALE DES IMPOTS<br>
            ----------------------<br>
            DIRECTION DES AFFAIRES GENERALES<br>
            ----------------------<br>
            CELLULE DU PERFECTIONNEMENT ET DE LA FORMATION CONTINUE<br>
            ----------------------
        </div>

        <div class="header-center">
            <% if (logoUrl) { %>
                <img src="<%= logoUrl %>" alt="Armoiries">
            <% } %>
        </div>

        <div class="header-right">
            REPUBLIC OF CAMEROON<br>
            Peace - Work - Fatherland<br>
            ----------------------<br>
            MINISTRY OF FINANCE<br>
            ----------------------<br>
            DIRECTORATE GENERAL OF TAXATION<br>
            ----------------------<br>
            DEPARTMENT OF GENERAL AFFAIRS<br>
            ----------------------<br>
            TRAINING AND SKILLS PERFECTION UNIT<br>
            ----------------------
        </div>
    </div>

    <!-- TITRE -->
    <div class="note-title">
        <h3 class="document-title">
            Note de service N°_____________ MINFI/DGI/DAG/CPFC du _____________<br>
            <%= noteTitle %>
        </h3>
    </div>

    <!-- CONTENU -->
    <div class="body-content">
        <p>
            Les responsables et autres personnels des structures opérationnelles ci-après désignés, 
            sont conviés à une session de formation sur <span class="highlight"><%= themeLibelle %></span> 
            qui se déroulera du <span class="highlight"><%= dateDebut %></span> au 
            <span class="highlight"><%= dateFin %></span> suivant le chronogramme et la répartition portés au tableau en annexe.
        </p>

        <p>
            La participation à ces sessions est obligatoire, sauf circonstances exceptionnelles 
            dûment justifiées.
        </p>

        <p>
            Les responsables des structures de rattachement prendront toutes les dispositions nécessaires 
            pour rendre disponibles aux dates et heures sus indiquées les personnels concernés par 
            cette formation.
        </p>

        <p>
            Le Directeur des Affaires Générales et le Directeur du Contentieux sont chargés, chacun 
            en ce qui le concerne, de la mise en œuvre des termes de la présente note de service./-
        </p>
    </div>

    <!-- SECTION COPIE -->
    <div class="copie-section">
        <div class="copie-title">Copie :</div>
        <div class="copie-list">
            <% if (copies && copies.length > 0) { %>
                <% copies.forEach(function(copie) { %>
                    <% if (copie.trim()) { %>
                        - <%= copie.trim() %><br>
                    <% } %>
                <% }); %>
            <% } else { %>
                - Intéressé(e)s<br>
                - Chefs de Service concernés<br>
                - Archives/Chrono.
            <% } %>
        </div>
    </div>

    <!-- QR CODE sous la copie -->
    <div class="verification-section">
        <div class="qr-code-container">
            <img src="<%= qrCodeUrl %>" alt="QR Code">
        </div>

        <div class="reference-systeme">
            Réf. Système : <%= referenceSysteme %>
        </div>

        <div class="verification-text">
            Scanner pour vérifier l'authenticité
        </div>
    </div>

    <div class="annexe-section">
        <h2 class="annexe-title">ANNEXE - <%= noteTitle %></h2>

        <table class="participants-table">
            <thead>
                <tr>
                    <th style="width: 5%;">N°</th>
                    <th style="width: 28%;">Nom & Prénoms</th>
                    <th style="width: 25%;">Fonction</th>
                    <th style="width: 25%;">Service</th>
                    <th style="width: 17%;">Lieu et Période de formation</th> 
                </tr>
            </thead>
            <tbody>
                <% participants.forEach(function(participant) { %>
                    <tr>
                        <td class="numero"><%= participant.numero %></td>
                        <td class="nom"><%= participant.nom %></td>
                        <td class="fonction"><%= participant.fonction || '-' %></td>
                        <td class="service"><%= participant.service %></td>
                        
                        <% if (participant.afficherLieuPeriode) { %>
                            <td class="lieu-periode" rowspan="<%= participant.rowspan %>">
                                <span class="periode-text"><%= participant.periode %></span>
                                <span class="lieu-text"><%= participant.lieu %></span>
                            </td>
                        <% } %>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <p style="text-align: center; font-size: 12px; margin-top: 5px;">
            Total des participants: <span class="highlight"><%= nombreParticipants %></span>
        </p>
    </div>
</body>
</html>
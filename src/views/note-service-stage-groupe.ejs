<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title><%= documentTitle %></title>
    <style>
        @page {
            margin: 1.5cm 2.5cm 1.5cm 2.5cm;
            size: A4;
        }
        
        body { 
            font-family: 'Times New Roman', serif; 
            margin: 0; 
            padding: 0;
            font-size: 16px;
            line-height: 1.4;
            color: #000;
        }

        /* HEADER */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 40px;
        }
        
        .header-left, .header-right {
            width: 40%;
            font-size: 10px;
            font-weight: bold;
            text-align: center;
        }
        
        .header-center {
            width: 20%;
            text-align: center;
        }
        
        .header-center img {
            max-width: 90px;
        }

        .separator {
            margin: 3px 0;
        }

        .header-section {
            margin-bottom: 2px;
        }

        /* TITRE */
        .note-title {
            text-align: center;
            margin-bottom: 20px;
        }

        .document-title {
            font-size: 17px;
            font-weight: bold;
            margin-bottom: 20px;
            line-height: 1.4;
        }

        .document-title p {
            margin: 5px 0;
        }

        .description {
            text-align: justify;
            margin: 20px 0;
            font-style: italic;
            line-height: 1.5;
            font-size: 16px;
        }

        .stagiaires-table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
        }

        .stagiaires-table th {
            background-color: #2c3e50;
            color: white;
            padding: 10px;
            border: 1px solid #000;
            font-weight: bold;
            text-align: center;
            font-size: 16px;
        }

        .stagiaires-table td {
            padding: 8px;
            border: 1px solid #000;
            text-align: center;
            font-size: 16px;
        }

        .stagiaires-table .groupe-cell {
            font-weight: bold;
            vertical-align: middle;
            background-color: #ecf0f1;
        }

        /* CONTENU */
        .body-content {
            text-align: justify;
            line-height: 1.5;
            font-size: 16px;
        }

        .body-content p {
            text-indent: 1.2cm;
            margin-bottom: 12px;
        }

        .dispositions-list {
            margin: 15px 0 15px 2cm;
            line-height: 1.6;
            font-size: 16px;
        }

        .dispositions-list li {
            margin-bottom: 8px;
        }

        /* COPIE */
        .copie-section {
            margin-top: 40px;
            page-break-inside: avoid;
            font-size: 16px;
        }

        .copie-title {
            font-weight: bold;
            text-decoration: underline;
            margin-bottom: 10px;
        }

        .copie-list {
            margin-left: 20px;
            line-height: 1.6;
        }

        /* QR CODE sous la section copie */
        .verification-section {
            margin-top: 20px;
            width: 150px;
            text-align: center;
            page-break-inside: avoid;
        }

        .qr-code-container img {
            width: 85px;
            height: 85px;
        }

        .reference-systeme {
            font-size: 10px;
            font-weight: bold;
            margin-top: 5px;
        }

        .verification-text {
            font-size: 8px;
            color: #555;
            margin-top: 3px;
        }

        /* ANNEXE */
        .annexe-section {
            page-break-before: always;
            margin: 20px 0;
        }

        .annexe-title {
            text-align: center;
            font-size: 17px;
            font-weight: bold;
            text-decoration: underline;
            margin: 20px 0;
            text-transform: uppercase;
        }

        .chronogramme-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .chronogramme-table th {
            background-color: #34495e;
            color: white;
            padding: 8px;
            border: 1px solid #000;
            font-weight: bold;
            text-align: center;
            font-size: 14px;
        }

        .chronogramme-table td {
            padding: 6px;
            border: 1px solid #000;
            text-align: center;
            font-size: 12px;
        }

        .service-name {
            font-weight: bold;
            text-align: left;
            padding-left: 10px;
            background-color: #ecf0f1;
        }

        .periode-cell {
            font-size: 11px;
            line-height: 1.3;
        }

        .affectations-finales {
            margin-top: 30px;
        }

        .affectations-title {
            font-size: 15px;
            font-weight: bold;
            text-decoration: underline;
            margin-bottom: 15px;
        }

        .affectation-groupe {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ddd;
            background-color: #f9f9f9;
        }

        .affectation-groupe h4 {
            margin: 0 0 10px 0;
            color: #2c3e50;
            font-size: 14px;
        }

        @media print {
            body {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
            
            .page-break {
                page-break-before: always;
            }
        }

        .highlight {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <div class="header">
        <div class="header-left">
            REPUBLIQUE DU CAMEROUN<br>
            Paix - Travail - Patrie<br>
            ----------------------<br>
            MINISTERE DES FINANCES<br>
            ----------------------<br>
            DIRECTION GENERALE DES IMPOTS<br>
            ----------------------<br>
            DIRECTION DES AFFAIRES GENERALES<br>
            ----------------------<br>
            CELLULE DU PERFECTIONNEMENT ET DE LA FORMATION CONTINUE<br>
            ----------------------
        </div>

        <div class="header-center">
            <% if (logoUrl) { %>
                <img src="<%= logoUrl %>" alt="Armoiries">
            <% } %>
        </div>

        <div class="header-right">
            REPUBLIC OF CAMEROON<br>
            Peace - Work - Fatherland<br>
            ----------------------<br>
            MINISTRY OF FINANCE<br>
            ----------------------<br>
            DIRECTORATE GENERAL OF TAXATION<br>
            ----------------------<br>
            DEPARTMENT OF GENERAL AFFAIRS<br>
            ----------------------<br>
            TRAINING AND SKILLS PERFECTION UNIT<br>
            ----------------------
        </div>
    </div>

    <!-- TITRE -->
    <div class="note-title">
        <h3 class="document-title">
            Note de service N°_____________ MINFI/DGI/DAG/CPFC du _____________<br>
            <%= noteTitle %>
        </h3>
    </div>

    <% if (description) { %>
    <div class="description">
        <%= description %>
    </div>
    <% } %>

    <table class="stagiaires-table">
        <thead>
            <tr>
                <th style="width: 10%;">N°</th>
                <th style="width: 60%;">Noms et Prénoms des stagiaires</th>
                <th style="width: 30%;">Groupes</th>
            </tr>
        </thead>
        <tbody>
            <% let numeroGlobal = 1; groupesAvecStagiaires.forEach(function(groupe) { %>
                <% groupe.stagiaires.forEach(function(stagiaire, index) { %>
                    <tr>
                        <td><%= numeroGlobal++ %></td>
                        <td style="text-align: left; padding-left: 20px;">
                            <%= stagiaire.nom %> <%= stagiaire.prenom %>
                        </td>
                        <% if (index === 0) { %>
                            <td class="groupe-cell" rowspan="<%= groupe.nombreStagiaires %>">
                                Groupe <%= groupe.numero %>
                            </td>
                        <% } %>
                    </tr>
                <% }); %>
            <% }); %>
        </tbody>
    </table>

    <div class="body-content">
        <p>
            Les chefs de Centres Régionaux des Impôts concernés prendront toutes les dispositions utiles 
            pour un séjour des stagiaires dans leurs services suivant les dispositions ci-après :
        </p>

        <% if (dispositions && dispositions.length > 0) { %>
        <ul class="dispositions-list">
            <% dispositions.forEach(function(disposition) { %>
                <li><%= disposition %></li>
            <% }); %>
        </ul>
        <% } %>

        <p>
            En tout état de cause, les stagiaires devront être associés à l'exécution des tâches conduisant 
            à l'acquisition progressive des compétences attachées aux différentes fonctions fiscales.
        </p>

        <p>
            A l'issue de la période de stage, <%= personnesResponsables %> s'assureront de l'acheminement 
            des carnets de stage dûment annotés à la Direction des Affaires Générales.
        </p>

        <p>
            <%= miseEnOeuvre %> sont chargés, chacun en ce qui le concerne, de la mise en œuvre des termes 
            de la présente note de service.
        </p>
    </div>

    <!-- SECTION COPIE -->
    <div class="copie-section">
        <div class="copie-title">Copie :</div>
        <div class="copie-list">
            <% if (copies && copies.length > 0) { %>
                <% copies.forEach(function(copie) { %>
                    <% if (copie.trim()) { %>
                        - <%= copie.trim() %><br>
                    <% } %>
                <% }); %>
            <% } else { %>
                - Intéressé(e)s<br>
                - Chefs de Service concernés<br>
                - Archives/Chrono.
            <% } %>
        </div>
    </div>

    <!-- QR CODE sous la copie -->
    <div class="verification-section">
        <div class="qr-code-container">
            <img src="<%= qrCodeUrl %>" alt="QR Code">
        </div>

        <div class="reference-systeme">
            Réf. Système : <%= referenceSysteme %>
        </div>

        <div class="verification-text">
            Scanner pour vérifier l'authenticité
        </div>
    </div>

    <div class="annexe-section">
        <h2 class="annexe-title">ANNEXE - CHRONOGRAMME DES ROTATIONS</h2>

        <table class="chronogramme-table">
            <thead>
                <tr>
                    <th style="width: 25%;">STRUCTURES</th>
                    <% numerosGroupes.forEach(function(numero) { %>
                        <th>GROUPE <%= numero %></th>
                    <% }); %>
                </tr>
            </thead>
            <tbody>
                <% servicesIds.forEach(function(serviceId) { %>
                    <% const service = chronogrammeRotations[serviceId]; %>
                    <tr>
                        <td class="service-name"><%= service.serviceNom %></td>
                        <% numerosGroupes.forEach(function(numero) { %>
                            <td class="periode-cell">
                                <% if (service.groupes[numero]) { %>
                                    Du <%= service.groupes[numero].dateDebut %><br>
                                    au <%= service.groupes[numero].dateFin %>
                                <% } else { %>
                                    -
                                <% } %>
                            </td>
                        <% }); %>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="affectations-finales">
            <h3 class="affectations-title">AFFECTATIONS FINALES PAR GROUPE</h3>
            
            <% Object.keys(affectationsFinalesParGroupe).sort((a, b) => a - b).forEach(function(groupeNumero) { %>
                <div class="affectation-groupe">
                    <h4>Groupe <%= groupeNumero %></h4>
                    <% affectationsFinalesParGroupe[groupeNumero].forEach(function(affectation) { %>
                        <p style="margin: 5px 0; padding-left: 20px;">
                            <strong>• <%= affectation.service %></strong> : 
                            du <%= affectation.dateDebut %> au <%= affectation.dateFin %>
                        </p>
                    <% }); %>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
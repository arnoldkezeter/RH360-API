<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title><%= documentTitle %></title>
    <style>
        @page {
            margin: 1.5cm 1.5cm 1.5cm 1.5cm;
            size: A4 landscape;
        }
        
        body { 
            font-family: 'Times New Roman', serif; 
            margin: 0; 
            padding: 0;
            font-size: 11px;
            line-height: 1.4;
            color: #000;
        }
        
        .header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            padding: 0;
            margin-bottom: 30px;
            min-height: 100px;
        }
        
        .header-left, .header-right {
            width: 40%;
            font-size: 9px;
            font-weight: bold;
            text-align: center;
            line-height: 1.2;
        }
        
        .header-center {
            text-align: center;
            width: 20%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .header-center img {
            max-width: 80px;
            height: auto;
        }
        
        .separator {
            margin: 2px 0;
            color: #000;
        }
        
        .header-section {
            margin-bottom: 1px;
        }
        
        .note-title {
            text-align: center;
            margin: 20px 0 10px 0;
        }
        
        .document-title {
            text-align: center;
            font-size: 14px;
            font-weight: bold;
            color: #000;
            text-decoration: underline;
            text-transform: uppercase;
        }

        .description {
            text-align: justify;
            margin: 20px 2cm;
            font-style: italic;
            line-height: 1.6;
        }

        /* Tableau des stagiaires */
        .stagiaires-table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
        }

        .stagiaires-table th {
            background-color: #2c3e50;
            color: white;
            padding: 10px;
            border: 1px solid #000;
            font-weight: bold;
            text-align: center;
        }

        .stagiaires-table td {
            padding: 8px;
            border: 1px solid #000;
            text-align: center;
        }

        .stagiaires-table .groupe-cell {
            font-weight: bold;
            vertical-align: middle;
            background-color: #ecf0f1;
        }

        .body-content {
            text-align: justify;
            line-height: 1.6;
            margin: 20px 2cm;
        }

        .body-content p {
            margin-bottom: 15px;
        }

        .dispositions-list {
            margin: 15px 0 15px 3cm;
            line-height: 1.8;
        }

        .dispositions-list li {
            margin-bottom: 8px;
        }

        /* Annexe - Chronogramme */
        .annexe-section {
            page-break-before: always;
            margin: 20px 1cm;
        }

        .annexe-title {
            text-align: center;
            font-size: 14px;
            font-weight: bold;
            text-decoration: underline;
            margin: 20px 0;
            text-transform: uppercase;
        }

        .chronogramme-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .chronogramme-table th {
            background-color: #34495e;
            color: white;
            padding: 8px;
            border: 1px solid #000;
            font-weight: bold;
            text-align: center;
            font-size: 10px;
        }

        .chronogramme-table td {
            padding: 6px;
            border: 1px solid #000;
            text-align: center;
            font-size: 9px;
        }

        .service-name {
            font-weight: bold;
            text-align: left;
            padding-left: 10px;
            background-color: #ecf0f1;
        }

        .periode-cell {
            font-size: 8px;
            line-height: 1.3;
        }

        .affectations-finales {
            margin-top: 30px;
        }

        .affectations-title {
            font-size: 12px;
            font-weight: bold;
            text-decoration: underline;
            margin-bottom: 15px;
        }

        .affectation-groupe {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ddd;
            background-color: #f9f9f9;
        }

        .affectation-groupe h4 {
            margin: 0 0 10px 0;
            color: #2c3e50;
        }

        .copie-section {
            margin-top: 40px;
            margin-left: 2cm;
            page-break-inside: avoid;
        }
        
        .copie-title {
            font-weight: bold;
            text-decoration: underline;
            margin-bottom: 10px;
            font-size: 11px;
        }
        
        .copie-list {
            margin-left: 20px;
            line-height: 1.4;
            font-size: 10px;
        }

        @media print {
            body {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }

        .highlight {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- En-tête officiel -->
    <div class="header">
        <div class="header-left">
            <div class="header-section">REPUBLIQUE DU CAMEROUN</div>
            <div class="header-section">Paix-Travail-Patrie</div>
            <div class="separator">----------------------</div>
            <div class="header-section">MINISTERE DES FINANCES</div>
            <div class="separator">----------------------</div>
            <div class="header-section">DIRECTION GENERALE DES IMPOTS</div>
            <div class="separator">----------------------</div>
            <div class="header-section">DIRECTION DES AFFAIRES GENERALES</div>
            <div class="separator">----------------------</div>
            <div class="header-section">CELLULE DU PERFECTIONNEMENT ET DE</div>
            <div class="header-section">LA FORMATION CONTINUE</div>
            <div class="separator">----------------------</div>
            <div class="reference-line">N°_____________ MINFI/DGI/DAG/CPFC</div>
        </div>
        
        <div class="header-center">
            <% if (logoUrl) { %>
                <img src="<%= logoUrl %>" alt="Armoiries du Cameroun">
            <% } %>
        </div>
        
        <div class="header-right">
            <div class="header-section">REPUBLIC OF CAMEROON</div>
            <div class="header-section">Peace-Work-Fatherland</div>
            <div class="separator">----------------------</div>
            <div class="header-section">MINISTRY OF FINANCE</div>
            <div class="separator">----------------------</div>
            <div class="header-section">DIRECTORATE GENERAL OF TAXATION</div>
            <div class="separator">----------------------</div>
            <div class="header-section">DEPARTMENT OF GENERAL AFFAIRS</div>
            <div class="separator">----------------------</div>
            <div class="header-section">TRAINING AND SKILLS PERFECTION UNIT</div>
            <div class="separator">----------------------</div>
            <div class="date-line">Yaoundé, le _______________</div>
        </div>
    </div>
   
    <!-- Titre du document -->
    <div class="note-title">
        <h3 class="document-title"><%= noteTitle %></h3>
    </div>

    <!-- Description -->
    <% if (description) { %>
    <div class="description">
        <%= description %>
    </div>
    <% } %>

    <!-- Tableau des stagiaires par groupe -->
    <table class="stagiaires-table">
        <thead>
            <tr>
                <th style="width: 10%;">N°</th>
                <th style="width: 60%;">Noms et Prénoms des stagiaires</th>
                <th style="width: 30%;">Groupes</th>
            </tr>
        </thead>
        <tbody>
            <% groupesAvecStagiaires.forEach(function(groupe) { %>
                <% groupe.stagiaires.forEach(function(stagiaire, index) { %>
                    <tr>
                        <td><%= stagiaire.numero %></td>
                        <td style="text-align: left; padding-left: 20px;">
                            <%= stagiaire.nom %> <%= stagiaire.prenom %>
                        </td>
                        <% if (index === 0) { %>
                            <td class="groupe-cell" rowspan="<%= groupe.nombreStagiaires %>">
                                Groupe <%= groupe.numero %>
                            </td>
                        <% } %>
                    </tr>
                <% }); %>
            <% }); %>
        </tbody>
    </table>

    <!-- Corps du document -->
    <div class="body-content">
        <p>
            Les chefs de Centres Régionaux des Impôts concernés prendront toutes les dispositions utiles 
            pour un séjour des stagiaires dans leurs services suivant les dispositions ci-après :
        </p>

        <% if (dispositions && dispositions.length > 0) { %>
        <ul class="dispositions-list">
            <% dispositions.forEach(function(disposition) { %>
                <li><%= disposition %></li>
            <% }); %>
        </ul>
        <% } %>

        <p>
            En tout état de cause, les stagiaires devront être associés à l'exécution des tâches conduisant 
            à l'acquisition progressive des compétences attachées aux différentes fonctions fiscales.
        </p>

        <p>
            A l'issue de la période de stage, <%= personnesResponsables %> s'assureront de l'acheminement 
            des carnets de stage dûment annotés à la Direction des Affaires Générales.
        </p>

        <p>
            <%= miseEnOeuvre %> sont chargés, chacun en ce qui le concerne, de la mise en œuvre des termes 
            de la présente note de service.
        </p>
    </div>

    <!-- Section copie -->
    <div class="copie-section">
        <div class="copie-title">Copie pour information :</div>
        <div class="copie-list">
            <% if (copies && copies.length > 0) { %>
                <% copies.forEach(function(copie) { %>
                    <% if (copie.trim()) { %>
                        - <%= copie.trim() %><br>
                    <% } %>
                <% }); %>
            <% } else { %>
                - Intéressé(e)s<br>
                - Chefs de Service concernés<br>
                - Archives/Chrono.
            <% } %>
        </div>
    </div>

    <!-- ANNEXE - Chronogramme -->
    <div class="annexe-section">
        <h2 class="annexe-title">ANNEXE - CHRONOGRAMME DES ROTATIONS</h2>

        <!-- Tableau des rotations -->
        <table class="chronogramme-table">
            <thead>
                <tr>
                    <th style="width: 25%;">STRUCTURES</th>
                    <% numerosGroupes.forEach(function(numero) { %>
                        <th >GROUPE <%= numero %></th>
                    <% }); %>
                </tr>
            </thead>
            <tbody>
                <% servicesIds.forEach(function(serviceId) { %>
                    <% const service = chronogrammeRotations[serviceId]; %>
                    <tr>
                        <td class="service-name"><%= service.serviceNom %></td>
                        <% numerosGroupes.forEach(function(numero) { %>
                            <td class="periode-cell">
                                <% if (service.groupes[numero]) { %>
                                    Du <%= service.groupes[numero].dateDebut %><br>
                                    au <%= service.groupes[numero].dateFin %>
                                <% } else { %>
                                    -
                                <% } %>
                            </td>
                        <% }); %>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <!-- Affectations finales par groupe -->
        <div class="affectations-finales">
            <h3 class="affectations-title">AFFECTATIONS FINALES PAR GROUPE</h3>
            
            <% Object.keys(affectationsFinalesParGroupe).sort((a, b) => a - b).forEach(function(groupeNumero) { %>
                <div class="affectation-groupe">
                    <h4>Groupe <%= groupeNumero %></h4>
                    <% affectationsFinalesParGroupe[groupeNumero].forEach(function(affectation) { %>
                        <p style="margin: 5px 0; padding-left: 20px;">
                            <strong>• <%= affectation.service %></strong> : 
                            du <%= affectation.dateDebut %> au <%= affectation.dateFin %>
                        </p>
                    <% }); %>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>